{
  "compilerOptions": {
    "outDir": "dist", // 输出目录
    "sourceMap": true, // 生成 sourceMap 文件
    "target": "ES2016", // 编译后的目标语法
    "module": "ESNext", // 模块系统
    "moduleResolution": "node", // 模块解析策略
    "strict": false, // 关闭所有严格类型检查
    "jsx": "preserve", // 保留 JSX，不转换为 JS
    "esModuleInterop": true, // 允许使用 ES 模块方式导入 CommonJS 模块
    "resolveJsonModule": true, // 允许导入 JSON 模块
    "lib": [
      "ESNext",
      "DOM"
    ], // 使用的标准库
    "baseUrl": ".",
    "paths": {
      "@vue/*": [
        "packages/*/src"
      ]
    }
  }
}